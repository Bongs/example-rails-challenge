<h1>Listing charges</h1>

<h2>Failed Charges</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @failed_charges.each do |charge| %>
      <tr class="failed_charge">
        <td><%= charge.find_chargeable.name %></td>
        <td><%= number_to_currency charge.amount %></td>
        <td><%= link_to 'Show', charge_path(charge.unique_code) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

